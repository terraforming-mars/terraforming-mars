{
  "name": "terraforming-mars",
  "version": "1.0.0",
  "description": "Terraforming Mars Game",
  "engines": {
    "node": "14.x"
  },
  "private": true,
  "dependencies": {
    "@types/node": "^10.17.47",
    "@types/pg": "^7.14.7",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "console-stamp": "3.0.0-rc4.2",
    "cross-env": "^7.0.3",
    "dialog-polyfill": "^0.5.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-vue": "^6.2.2",
    "less": "^3.10.3",
    "mnemonist": "^0.38.1",
    "pg": "^8.2.1",
    "spectre.css": "^0.5.8",
    "sqlite3": "^5.0.0",
    "typescript": "^4.1.2",
    "vti": "^0.1.3",
    "vue": "2.6.10",
    "vue-template-compiler": "2.6.10",
    "webpack": "^5.25.0",
    "webpack-cli": "^4.5.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^10.0.2",
    "@vue/test-utils": "^1.1.1",
    "chai": "^4.2.0",
    "compression-webpack-plugin": "^8.0.0",
    "css-loader": "^5.2.6",
    "fork-ts-checker-webpack-plugin": "^6.2.13",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "less-loader": "^10.0.0",
    "mocha": "^8.3.2",
    "mochapack": "^2.1.2",
    "mutation-observer": "^1.0.3",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.2.1",
    "tsc-alias": "^1.3.9",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "vue-loader": "^15.9.7",
    "vue-style-loader": "^4.1.3",
    "zlib": "^1.0.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript"
  },
  "scripts": {
    "build": "npm run compile && npm run webpack && npm run lint",
    "prebuild": "npm run makeCss",
    "clean": "rm -r ./build/ ./src/genfiles/ || true",
    "compile": "tsc --build src/tsconfig.json && tsc-alias -p src/tsconfig.json",
    "precompile": "npm run makeJson",
    "cover": "nyc mocha -r ts-node/register -r tsconfig-paths/register --file build/tests/utils/setup.js --recursive build/tests --exclude 'build/tests/components/**'",
    "precover": "tsc --build tests/tsconfig.json",
    "fix": "eslint --fix src tests --ext ts --ext vue",
    "lint": "eslint --cache src tests --ext ts --ext vue",
    "makeCss": "lessc src/styles/common.less build/styles.css",
    "makeJson": "node make_static_json.js",
    "start": "node build/src/server.js",
    "test": "npm run test:server && npm run test:components",
    "test:server": "mocha -r ts-node/register -r tsconfig-paths/register -r build/tests/utils/setup.js --recursive build/tests --exclude 'build/tests/components/**'",
    "pretest:server": "tsc --build tests/tsconfig.json",
    "test:components": "cross-env NODE_ENV=development vti diagnostics && mochapack --require tests/components/setup.ts 'tests/components/**/*.spec.ts'",
    "test:components:watch": "cross-env NODE_ENV=development mochapack --watch --require tests/components/setup.ts 'tests/components/**/*.spec.ts'",
    "prewatch": "rimraf build/main.js*.{br,gz}",
    "watch": "cross-env NODE_ENV=development webpack --watch",
    "webpack": "cross-env NODE_ENV=production webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bafolts/terraforming-mars.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bafolts/terraforming-mars/issues"
  },
  "homepage": "https://github.com/bafolts/terraforming-mars#readme"
}
