{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [], 
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "types": ["node", "mocha", "chai"]
    },
    "include": [
        "tests/**/*.spec.ts",
    ],
}