{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": ["dom"],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "types": ["node", "mocha", "chai"]
    },
    "include": [
        "tests/utils/Vue.ts",
        "tests/**/*.spec.ts"
    ]
}
