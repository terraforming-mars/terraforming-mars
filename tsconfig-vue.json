{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": false,
        "noEmit": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters":false,
        "sourceMap": false,
        "types": ["node"]
    },
    "exclude": [
        "src",
        "tests",
        "*.ts"
    ],
    "include": [
        "build/src/components/**/*Vue.ts"
    ]
}
