{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["dom"],
        "noEmit": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters":false,
        "outDir": "build",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "target": "es5",
        "types": ["node"],
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": [],
    "include": [
        "build/src/components/**/*Vue.ts"
    ]
}
