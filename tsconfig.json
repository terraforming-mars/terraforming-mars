{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom"], 
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "moduleResolution": "node",
    
  },
  "include": [
    "src/*.ts",
    "src/components/*.ts",
    "src/directives/*.ts",
    "src/cards/*.ts",
    "src/cards/corporation/*.ts",
    "src/cards/prelude/*.ts",
    "src/cards/venusNext/*.ts",    
    "src/cards/turmoil/*.ts",  
    "src/cards/promo/*.ts",  
    "src/cards/colonies/*.ts",           
    "src/inputs/*.ts",
    "src/models/*.ts",
    "src/colonies/*.ts",
    "script.ts",
    "server.ts",
    "src/interrupts/*.ts",
    "src/database/*.ts",
    "src/turmoil/*.ts",
    "src/turmoil/globalEvents*.ts",    
  ],
  "files": [
    "script.ts",
    "server.ts"
  ]
}
