{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "lib": ["dom"],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "types": ["node"],
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "script.ts",
        "server.ts"
    ]
}
